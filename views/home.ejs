<!DOCTYPE html> 
<html> 

<head> 
	<title>MyNotes</title> 
</head> 

<body> 
	<!-- Поле для всех существующих заметок -->
	<h1>Заметки</h1> 
	<div style="display: flex;"> 
		<% data.forEach(element => { %> 
			<form action="/update" method="post"> 
				<input type="number" style="display: none;"
					name="noteId" value="<%= element.noteId %>"> 
				<textarea type="text" rows="6" cols="30" name="noteContent" value="<%= element.noteContent %>"><%= element.noteContent %></textarea> 
				<br> 
				<button type="submit">Обновить</button> 
			</form> 

			<form action="/delete" method="post"> 
				<input type="number" style="display: none;"
					name="noteId" value="<%= element.noteId %>"> 
				<button type="submit" style="margin: 0px 4px;">✕</button> 
			</form> 
		<% }) %> 
	</div> 

	<!-- Поле для создания новой заметки -->
	<h1>Новая заметка</h1>
	<form action="/" method="post"> 
		<input type="number" style="display: none;"
			name="noteId"> 
		<textarea type="text" rows="6" cols="30"
			placeholder="Напишите..."
			name="noteContent"></textarea> 
		<br> 
		<button type="submit">Добавить</button> 
	</form>
	<form action="/save" method="post">
		<button type="submit" style="margin: 4px 0px;">Сохранить все</button>
	</form>
</body> 

</html>
